<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>OneFilter</filter-name>
        <filter-class>com.cth.filter.OneFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OneFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.cth.listener.OneListener</listener-class>
    </listener>
    <!--    动态资源注册-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.cth.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueryServlet</servlet-name>
        <servlet-class>com.cth.controller.QueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.cth.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.cth.controller.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>com.cth.controller.QuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionQueryServlet</servlet-name>
        <servlet-class>com.cth.controller.QuestionQueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindServlet</servlet-name>
        <servlet-class>com.cth.controller.FindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <servlet-class>com.cth.controller.QuestionDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAutoServlet</servlet-name>
        <servlet-class>com.cth.controller.QuestionAutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAutoCheckServlet</servlet-name>
        <servlet-class>com.cth.controller.QuestionAutoCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScoreQueryServlet</servlet-name>
        <servlet-class>com.cth.controller.ScoreQueryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ScoreQueryServlet</servlet-name>
        <url-pattern>/ScoreQuery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAutoCheckServlet</servlet-name>
        <url-pattern>/questionAutoCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAutoServlet</servlet-name>
        <url-pattern>/questionAuto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <url-pattern>/questionDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindServlet</servlet-name>
        <url-pattern>/questionFind</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionQueryServlet</servlet-name>
        <url-pattern>/questionQuery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/questionAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/userDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/userRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueryServlet</servlet-name>
        <url-pattern>/userQuery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--    动态资源注册-->
<!--    欢迎资源文件注册-->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>5</session-timeout><!--表示只能该会话只能保存5分钟-->
    </session-config>

</web-app>